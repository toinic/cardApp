{% extends 'base.html.twig' %}

{% block title %}Card index{% endblock %}

{% block body %}
    <h1>Card index</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Title</th>
                <th>Body</th>
                <th>Edition</th>
                <th>Rarity</th>
                <th>Artist</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for card in cards %}
            <tr>
                <td>{{ card.id }}</td>
                <td><img src="{{ card.image }}" height="150px"></img></td>
                <td>{{ card.title }}</td>
                <td>{{ card.body }}</td>
                <td>{{ card.edition }}</td>
                <td>{{ card.rarity }}</td>
                <td>{{ card.artist }}</td>
                <td>
                    <a class="btn btn-dark btn-sm" href="{{ path('card_show', {'id': card.id}) }}">show</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('card_edit', {'id': card.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('card_new') }}">Create new</a>
{% endblock %}
